{
    "test_name": "Simple GPIO 12 Pulse Test",
    "pin_setup": {
      "mode": "BCM"
    },
    "emulation_sequence": [
      {
        "action_id": "setup_gpio12_out",
        "type": "set_gpio_direction",
        "pin": 12,
        "direction": "output",
        "initial_state": "low"
      },
      {
        "action_id": "pulse_gpio12",
        "type": "pulse_gpio_output",
        "pin": 12,
        "duration_ms": 500,
        "pulse_state": "high",
        "initial_state": "low"
      }
    ]
  }